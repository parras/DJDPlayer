<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

    <fragment
            android:id="@+id/player_header"
            android:name="nu.staldal.djdplayer.PlayerHeaderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/player_header_divider"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@android:color/white"/>

    <fragment
            android:id="@+id/playqueue"
            android:name="nu.staldal.djdplayer.PlayQueueFragment"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>

    <View
            android:id="@+id/player_footer_divider"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@android:color/white"/>

    <fragment
            android:id="@+id/player_footer"
            android:name="nu.staldal.djdplayer.PlayerFooterFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
